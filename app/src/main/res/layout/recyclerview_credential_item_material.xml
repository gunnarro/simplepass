<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/credential_entity_id"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text=""
        android:visibility="invisible" />

    <TextView
        android:id="@+id/credential_header_txt"
        style="@style/credential_list_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:background="@color/color_tbl_header"
        android:text="System name"
        android:textAlignment="textStart"
        android:textStyle="normal" />

    <ImageView
        android:id="@+id/ic_credential_row_delete_id"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="0dp"
        android:background="@color/color_tbl_header"
        android:src="@drawable/ic_delete_red_24dp" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/credential_header_txt"
        android:stretchColumns="1">

        <TableRow>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:orientation="vertical">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/credential_username_lbl"
                    style="@style/CustomTextViewLabelStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:text="username" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/credential_username_value"
                    style="@style/CustomTextViewStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:text="gunnarro" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/credential_password_lbl"
                    style="@style/CustomTextViewLabelStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:text="password" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/credential_password_value"
                    style="@style/CustomTextViewStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:text="my-pass"
                    android:textAppearance="@style/CustomTextViewStyle" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/credential_password_validation_lbl"
                    style="@style/CustomTextViewLabelStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:text="password validation"
                    android:textAppearance="@style/CustomTextViewLabelStyle" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/credential_password_validation_value"
                    style="@style/CustomTextViewStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:text="some validation text" />
            </LinearLayout>
        </TableRow>
    </TableLayout>

